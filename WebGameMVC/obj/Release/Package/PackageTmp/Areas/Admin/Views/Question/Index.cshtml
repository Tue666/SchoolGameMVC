    <div class="row">
        <div class="col-md-6">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Tên chương</th>
                        <th scope="col">Trạng thái</th>
                        <th scope="col">Tác vụ</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.ID</th>
                            <td>@item.NameDungeon</td>
                            <td>@item.Status</td>
                            @{ 
                                var status = (item.Status == true) ? "Khóa" : "Mở";
                            }
                            <td><a onclick="detailDung(@item.ID), listStage(@item.ID)" href="#">Xem</a> | <a href="#">Sửa</a> | <a onclick="changeStatusDungeon(@item.ID)" href="#">@status</a></td>
                        </tr>
                    }
                    <tr><td><a href="#">Thêm</a></td></tr>
                </tbody>
            </table>
        </div>
        <div id="partialDivDungeonDetail" class="col-md-6" style="font-size:larger;font-weight:bold">

        </div>
