@model List<WebGameMVC.Models.EF.Avatar>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter {
    <script type="text/javascript">
        $('.scrollTop').on('click', function () {
            $('.things-collec').scrollTop(0);
        });
        $('.things-collec').scroll(function () {
            sessionStorage.scrollPos = $(this).scrollTop();
        });
        window.onload = function () {
            $('.things-collec').scrollTop(sessionStorage.scrollPos || 0);
        };
    </script>
}
<div class="my-container">
    <img class="bg-collection" src="~/Assets/images/bgCollection.png" />
    <div class="collection-container">
        <div class="menu-collec">
            <a class="my-active" href="/Collection/Index?userID=@ViewBag.UserID&categoryID=1">Avatar</a>
            <a href="#">Wings</a>
            <a href="#">Pet</a>
        </div>
        <div class="things-collec">
            @foreach (var item in Model)
            {
                <div class="collec-item">
                    <div class="collec-image">
                        <img src="@item.Image" />
                    </div>
                    <div class="collec-button" style="display:flex;justify-content:space-around;align-items:center">
                        <a id="view" href="/Collection/ViewItem?itemID=@item.ID&itemCateID=@item.CategoryID">Xem</a>
                        <a id="use" href="/Collection/UpdateImage?itemID=@item.ID&itemCateID=@item.CategoryID">Dùng</a>
                    </div>
                </div>
            }
        </div>
    </div>
    <a class="scrollTop"><i style="margin:0" class="fa fa-arrow-up"></i></a>
</div>